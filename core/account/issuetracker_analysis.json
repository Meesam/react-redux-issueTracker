{  
   "index":{  
      "analysis":{  
         "char_filter" : {
            "punctuation_filter" : {
               "type" : "mapping",
               "mappings" : ["&=>and"]
            }
         },       
         "filter":{ 
           "metaphone_filter":{  
               "type":"phonetic",
               "encoder":"metaphone",
               "replace":false
            },
            "en_stop_filter":{  
               "type":"stop",
               "stopwords":[  
                  "_en_"
               ]
            },
            "en_stem_filter":{  
               "type":"stemmer",
               "name":"minimal_english"
            },
            "asciifolding_filter":{  
               "type":"asciifolding",
               "preserve_original":true
            },
            "ngram_filter":{  
               "type":"nGram",
               "min_gram":2,
               "max_gram":20,
               "token_chars":[  
                  "letter",
                  "digit",
                  "punctuation",
                  "symbol"
               ]
            },
            "word_delimiter_filter" : {
               "type" : "word_delimiter",
               "preserve_original" : true               
            }
         },
         "analyzer":{  
            "standard_analyzer":{  
               "type":"custom",
               "tokenizer":"standard",
               "filter":[  
                  "lowercase",
                  "asciifolding_filter",
                  "word_delimiter_filter",
                  "en_stop_filter",
                  "en_stem_filter"
               ],
               "char_filter":[  
                  "punctuation_filter",
                  "html_strip"
               ]
            },
            "lowercase_analyzer":{
               "type":"custom",
               "tokenizer":"keyword",
               "filter":["lowercase"]
            },
            "metaphone_analyzer":{  
               "type":"custom",
               "tokenizer":"standard",
               "filter":[  
                  "lowercase",
                  "asciifolding_filter",
                  "word_delimiter_filter",
                  "en_stop_filter",
                  "metaphone_filter"
               ],
               "char_filter":[  
                  "punctuation_filter",
									"html_strip"
               ]
            },
            "ngram_analyzer":{  
               "type":"custom",
               "tokenizer":"whitespace",
               "filter":[  
                  "lowercase",
                  "asciifolding_filter",
                  "ngram_filter"
               ],
               "char_filter":[  
                  "punctuation_filter",
                  "html_strip"
               ]
            },
            "whitespace_analyzer":{  
               "type":"custom",
               "tokenizer":"whitespace",
               "filter":[  
                  "lowercase",
                  "asciifolding_filter"
               ],
               "char_filter":[  
                  "punctuation_filter",
                  "html_strip"
               ]
            }
         }
      }
   }
}
